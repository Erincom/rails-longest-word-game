<h1 class="text-center">
  The Longest Word Game
</h1>

<div class="grid text-center">
  <% @grid.each do |letter| %>
  <%= letter %>
  <% end %>
</div>

<form action="/score" method="post" class="form-horizontal text-center">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group">
    <label for="word"><h5>What is the longest word that you can make from the letters?</h5></label>
    <input type="text" class="form-control" name="word" placeholder="zenith">
    <input type="hidden" name="start_time" value="<%= Time.now %>">
    <input type="hidden" name="grid" value="<%= @grid %>">
  </div>
  <button type="submit" class="btn btn-success">Submit</button>
</form>
